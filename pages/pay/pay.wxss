/* pages/pay/pay.wxss */
.pay_add{
    background: #fff;
    position: relative;
    margin-bottom: 10px;
}
.dingwei{
    width: 20px;
    height: 20px;
    position: absolute;
    top: 15px;
    left: 10px;
}
.rightj{
    width: 25px;
    height: 25px;
    position: absolute;
    top: 25px;
    right: 0px;
}
.pay_add .address_info{
    padding: 10px 40px;
}
.pay_add .address_info text{
    font-size: 13px;
    display: inline-block;
}

.table{
    margin:10px 0px;
    background: #fff;
}

.table .tr{
    text-align: center;
    border-bottom:1px solid #F5F6F7;
}   
.table .tr.header .td{
    font-size: 14px;
}
.table .tr .td{
    height: 40px;
    line-height: 40px;
    display: inline-block;
    width: 20%;
    font-size: 12px;
    float: left;
}
.table .tr .td.td_goods{
    width: 60%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    height: 40px;
    text-indent: 5px;
}

.remarks{
    background: #fff;
    font-size: 14px;
    padding: 10px;
}

/* 底部 */
.btn_footer{
    width: 100%;
    height: 50px;
    position: fixed;
    bottom: 0;
    left: 0;
    border-bottom: 1px solid #e5e5e5;
    background: #fff;
    font-size: 14px; 
}
.btn_footer text{
    padding: 0 10px;
    line-height: 50px;
}
.play{
    width: 80px;
    height: 30px;
    background: #f56a21;
    display: block;
    float: right;
   text-align: center;
   line-height: 30px !important;
   color: #fff;
   margin: 10px 10px;
}
.pricep{
    color: #ff0000;
}