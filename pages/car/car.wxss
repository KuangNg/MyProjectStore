/* pages/car/car.wxss */
.goodslist{
    height: 100px;
    background-color: #fff;
    padding-left: 100px;
    position: relative;
}
.goodslist .left{
    position: absolute;
    top: 10px;
    left: 10px;
}
.goodslist .left image{
    width: 80px;
    height: 80px;
}
.goodslist .right{
    margin: 10px 0;
    float: left;
    height: 80px;
}
.goodslist .right .goodsName{
    font-size: 14px;
}
.goodslist .right .goodsAddress{
    color: #949494;
    font-size: 12px;
}
.goodslist .right .goodsPrice{
    font-size: 14px;
    color: #FF1794;
    width: 100%;
    line-height: 22px;
    height: 22px;
}
.car{
    position: absolute;
    bottom: 5px;
    right: 10px;
}
.car image{
    width: 20px;
    height: 20px;
}

.btn{
    width: 100px;
    height: 28px;
    text-align: center;
    line-height: 28px;
    position: absolute;
    bottom: 10px;
    right: 53px; 
}
.btn text{
    width: 27px;
    height: 28px;
    border: 1px solid #b2b2b2;
    display: block;
    float: left;
}
.btn .car_num{
    width: 41px;
    border-left: none;
    border-right: none;
}

/* 底部 */
.btn_footer{
    width: 100%;
    height: 50px;
    position: fixed;
    bottom: 0;
    left: 0;
    border-bottom: 1px solid #e5e5e5;
    background: #fff;
    font-size: 14px; 
}
.btn_footer text{
    padding: 0 10px;
    line-height: 50px;
}
.play{
    width: 80px;
    height: 30px;
    background: #f56a21;
    display: block;
    float: right;
   text-align: center;
   line-height: 30px !important;
   color: #fff;
   margin: 10px 10px;
}
.pricep{
    color: #ff0000;
}