<!-- 轮播图 -->
<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" indicator-active-color="{{color}}">
    <block wx:for="{{background}}" wx:key="*this">
        <swiper-item>
        <view class="swiper-item">
            <image src='{{item}}'></image>
        </view>
        </swiper-item>
    </block>
</swiper>
<!-- 轮播图 end -->


<!-- 商品详情 -->
<view class='goods_info'>
    <view class='goods_title'> 
        {{goods.goodsName}}
        <view class='collect' wx:if="{{goods.isCollect}}">
            <image src='../../image/icon-aixin.png'></image>
            <text>已收藏</text>
        </view>
        <view class='collect' wx:else>
            <image src='../../image/icon-aixin1.png'></image>
            <text>未收藏</text>
        </view>
    </view>
    <view class='goods_price'>
        <text>￥{{goods.goodsPrice}}</text>
        <text class='oldprice'>￥{{goods.goodsoldPrice}}</text>
    </view>
    <view class='goods_de'>*本产品由品牌商提供发货服务.</view>
</view>
<!-- 商品详情end -->

<!-- 商品内容 -->
<view class='goods_content'>
    <image src='{{goods.goodsImg}}'></image>
    <text>{{goods.goodsContent}}</text>
</view>
<view class='goods_detail'>
    <image src='{{goods.goodsDetail}}' mode='widthFix'></image>
</view>
<!-- 商品内容end -->


<!-- 底部 -->
<view class='goods_footer'>
    <view class='ul'>
        <view class='li'>
            <view class='icar' bindtap='Car'>
                <image src='../../image/car.png'></image>
                <text class='num'>{{num}}</text>
            </view>
        </view>
        <view class='li n1'>
            前往商城
        </view>
        <view class='li n2' bindtap='getCar'>
            加入购物车
        </view>
        <view class='li n3'>
            前往付款
        </view>
    </view>
</view>
<!-- 底部end -->